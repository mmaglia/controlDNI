<form method="post" action="{{ path('lista_control_delete', {'id': lista_control.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ lista_control.id) }}">
    <button class="btn">Delete</button>
</form>
